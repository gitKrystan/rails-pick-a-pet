<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Would you rather have as a pet...</h3>
  </div>
  <div class="panel-body">
    <div class="">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= render 'votes/form', answer: question.first_answer %>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= render 'votes/form', answer: question.second_answer %>
        </div>
        <div class="col-xs-12 col-md-4 chart-goes-here" id="question-<%= question.id %>-chart">
          <!-- Chart gets inserted here -->
        </div>
      </div>
    </div>
    <div class="col-lg-12">
      <p>
        <%= question.description %>
      </p>
      <%= render 'comments/form', question: question %>
      <div id="comments-about-<%=question.id%>" class="comments">
        <%= render question.comments.order(created_at: :desc) %>
      </div>
    </div>
  </div>

  <div class="panel-footer">
    <%= link_to 'Edit', edit_question_path(question), id: "edit-question-#{question.id}" %>
  </div>
</div>
